<%- include("header") -%>

<body>


  <div id="heading" class="box">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for(var i = 0; i < newActivities.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p> <%=newActivities[i]%> </p>
    </div>
    <% } %>

    <form class = "item" action="/" method="post">
      <input type="text" name="newActivity" value="" placeholder="New Activity" autocomplete="off">
      <button type="submit" name="list" value = <%=listTitle%>>+</button>
    </form>
  </div>

<%- include("footer") -%>
